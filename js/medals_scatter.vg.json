{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Countries VS Medals VS Golds",
  "data": {
    "url": "data/medals_scatter.vg.json"
  },
  "encoding": {
    "x": {
      "field": "summer_participations",
      "type": "quantitative",
      "title": "Participations",
      "axis": {"tickCount": 1},
      "scale": {"type": "linear", "domain": [1, 30]}
    },
    "y": {
      "field": "summer_total",
      "type": "quantitative",
      "axis": {"tickCount": 1},
      "scale": {"type": "linear", "domain": [1, 2500]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "summer_gold",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [5, 10, 15, 20, 25],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "countries", "type": "nominal"}
        ]
      }
    }
  ]
}