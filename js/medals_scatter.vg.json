{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Countries VS Medals VS Golds",
  "data": {
    "url": "https://raw.githubusercontent.com/Andy-szy/Assignment2/main/data/countries_medals.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.summer_gold > 0"}
  ],
  "encoding": {
    "x": {
      "field": "summer_participations",
      "type": "quantitative",
      "title": "Participations",
      "scale": {"type": "linear", "domain": [1, 30]}
    },
    "y": {
      "field": "summer_total",
      "type": "quantitative",
      "scale": {"type": "log", "domain": [1, 2800],
        "base": 2
      }
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "summer_gold",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [5, 10, 20, 50, 100, 200, 300],
            "range": [20, 40, 80, 200, 400, 600, 800, 1600]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "country", "type": "nominal"},
          {"field": "summer_participations", "type": "quantitative"},
          {"field": "summer_total", "type": "quantitative"},
          {"field": "summer_gold", "type": "quantitative"}
        ]
      }
    }
  ]
}