{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Participation times VS Medals VS Golds",
  "config": {
    "background": "#F8F4EE",
    "title": {
      "font": "sans-serif",
      "fontSize": 25
    },
    "legend": {
      "titleFontSize": 14,
      "labelFontSize": 12
    },
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Andy-szy/Assignment2/main/data/countries_medals.csv"
  },
  "params": [
    {
      "name": "minimum_gold",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 300,
        "step": 10,
        "name": "Minimum Gold quantity: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania",
          "No specific continent"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania",
          "No specific continent"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "calculate": "datum['summer_gold']", "as": "Gold"
    },
    {
      "calculate": "datum['summer_participations']", "as": "Participation time"
    },
    {
      "calculate": "datum['summer_total']", "as": "Medal tally"
    },
    {"filter": "datum.Gold > 0"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    },
    {
      "filter": "datum.Gold > minimum_gold"
    }
  ],
  "encoding": {
    "x": {
      "field": "Medal tally",
      "type": "quantitative",
      "scale": {"type": "log", "domain": [1, 3000]}
    },
    "y": {
      "field": "Gold",
      "type": "quantitative",
      "scale": {"type": "log", "domain": [1, 1500]
      }
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Participation time",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [5, 10, 15, 20, 25],
            "range": [30, 60, 100, 200, 300]
          }
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania",
              "No specific continent"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628",
              "#123567"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Participation time", "type": "quantitative"},
          {"field": "Medal tally", "type": "quantitative"},
          {"field": "Gold", "type": "quantitative"},
          {"field": "Continent", "type": "nominal"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dy": 8,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Participation time", "type": "quantitative"},
          {"field": "Medal tally", "type": "quantitative"},
          {"field": "Gold", "type": "quantitative"},
          {"field": "Continent", "type": "nominal"
          }
        ]
      }
    }
  ]
}